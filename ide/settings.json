{
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "workbench.settings.applyToAllProfiles": [
        "terminal.integrated.fontFamily",
        "python.analysis.typeCheckingMode"
    ],
    "redhat.telemetry.enabled": false,
    "python.analysis.typeCheckingMode": "standard",
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "onFocusChange",
    "github.copilot.nextEditSuggestions.enabled": false,
    "explorer.compactFolders": false,
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke":"#ea553b"
    },
    "editor.mouseWheelZoom": true,
    "workbench.colorTheme": "Default Dark+",
    "git.allowNoVerifyCommit": true,
    "git.autorefresh": false,
    "git.useEditorAsCommitInput": false,
    "git.pullBeforeCheckout": true,
    "git.autoStash": true,
    "git.replaceTagsWhenPull": true,
    "git.enableSmartCommit": true,
    "git.autofetch": false,
    "git.confirmSync": false,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "pylint.severity": {
        "C0116": "Hint", // Function is missing a docstring
        "C0301": "Hint", // Line too long
        "C0115": "Hint",  // Class is missing a docstring
        "W0212": "Hint",  // Protected member access
        "C0303": "Hint" // Trailing whitespace
    },
    "mypy-type-checker.severity": {
        "no-untyped-def": "Hint" // Function is missing type annotations
    },
    "mypy-type-checker.args": [
        "[\"--disallow-untyped-defs=false\"]"
    ],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportPrivateImportUsage": "information", // Disable warning for private imports
        "reportArgumentType": "none" // Change argument type report to information level
    },
    "files.exclude": {
        "**/__pycache__": true
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports.ruff": "always"
    },
    "ruff.organizeImports": true
}